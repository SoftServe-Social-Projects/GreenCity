<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">
    <changeSet author="Mamchuk Orest" id="Mamchuk-1">
        <createTable tableName="user_actions">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="achievement_category_id" type="BIGINT">
            </column>
            <column name="habit_id" type="BIGINT">
                <constraints nullable="true"/>
            </column>
            <column name="count" type="INTEGER">
            </column>

        </createTable>
    </changeSet>
    <changeSet author="Mamchuk Orest" id="Mamchuk-2">
        <addForeignKeyConstraint baseColumnNames="user_id" baseTableName="user_actions"
                                 constraintName="user_actions_users_id_fk" referencedColumnNames="id"
                                 referencedTableName="users"/>
    </changeSet>
    <changeSet author="Orest Mamchuk" id="Mamchuk-8">
        <addForeignKeyConstraint baseColumnNames="achievement_category_id" baseTableName="user_actions"
                                 constraintName="achievement_category_id_fk" referencedColumnNames="id"
                                 referencedTableName="achievement_categories"/>
    </changeSet>

    <changeSet id="Spodaryk-28" author="Oksana Spodaryk">
        <addForeignKeyConstraint baseColumnNames="habit_id"
                                 baseTableName="user_actions"
                                 constraintName="fk_user_actions_habit"
                                 onDelete="RESTRICT"
                                 onUpdate="RESTRICT"
                                 referencedColumnNames="id"
                                 referencedTableName="habits"/>
    </changeSet>

    <changeSet id="ch-add-unique-constraint-to-userId-and-achievement_category_id" author="Denys Ryhal">
        <addUniqueConstraint tableName="user_actions"
                             columnNames="user_id, achievement_category_id, habit_id"/>
    </changeSet>
</databaseChangeLog>
