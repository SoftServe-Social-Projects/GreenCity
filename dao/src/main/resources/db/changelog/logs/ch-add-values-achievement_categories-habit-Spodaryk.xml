<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
  http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="Spodaryk-30" author="Oksana Spodaryk">
        <preConditions onFail="MARK_RAN">
            <tableExists tableName="achievement_categories"/>
            <sqlCheck expectedResult="1">
                SELECT COUNT(*) FROM achievement_categories WHERE id = 5 AND name = 'HABIT'
            </sqlCheck>
            <sqlCheck expectedResult="0">
                SELECT COUNT(*) FROM achievement_categories WHERE id = 5 AND name = 'EXPECTED_OLD_NAME'
            </sqlCheck>
        </preConditions>

        <insert tableName="achievement_categories">
            <column name="id" value="9"/>
            <column name="name" value="HABIT"/>
        </insert>

        <update tableName="achievement_categories">
            <column name="name" value="ACQUIRED_HABIT_DAYS"/>
            <where>id = 5</where>
        </update>

    </changeSet>
</databaseChangeLog>
