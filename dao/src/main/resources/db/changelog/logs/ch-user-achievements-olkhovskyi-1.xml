<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">
    <changeSet id="16" author="Yuriy O.">
        <createTable tableName="achievements">
            <column name="id" autoIncrement="true" type="BIGINT">
                <constraints primaryKey="true"/>
            </column>
            <column name="achievement_category_id" type="BIGINT"/>
            <column name="condition" type="INTEGER"/>
            <column name="title" type="VARCHAR(255)">
                <constraints nullable="true"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="true"/>
            </column>
            <column name="name_eng" type="VARCHAR(255)">
                <constraints nullable="true"/>
            </column>
            <column name="score" type="INT">
                <constraints nullable="true"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet author="Orest Mamchuk" id="Mamchuk-4">
        <addForeignKeyConstraint baseColumnNames="achievement_category_id" baseTableName="achievements"
                                 constraintName="achievements_category_id_fk" referencedColumnNames="id"
                                 referencedTableName="achievement_categories"/>
    </changeSet>

    <changeSet id="17" author="Yuriy O.">
        <createTable tableName="user_achievements">
            <column name="id" autoIncrement="true" type="BIGINT">
                <constraints primaryKey="true"/>
            </column>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false" />
            </column>
            <column name="achievement_id" type="BIGINT">
                <constraints nullable="false" />
            </column>
            <column name="habit_id" type="BIGINT">
                <constraints nullable="true"/>
            </column>
            <column name="notified" type="BOOLEAN" defaultValue="false"/>
        </createTable>
    </changeSet>
    <changeSet id="18" author="Yuriy O.">
        <addForeignKeyConstraint baseColumnNames="user_id" baseTableName="user_achievements" constraintName="FK_user_user_achievements" deferrable="false" initiallyDeferred="false" onDelete="CASCADE" onUpdate="CASCADE" referencedColumnNames="id" referencedTableName="users"/>
    </changeSet>
    <changeSet id="Spodaryk-29" author="Oksana Spodaryk">
        <addForeignKeyConstraint baseColumnNames="habit_id"
                                 baseTableName="user_achievements"
                                 constraintName="fk_user_achievements_habit"
                                 onDelete="RESTRICT"
                                 onUpdate="RESTRICT"
                                 referencedColumnNames="id"
                                 referencedTableName="habits"/>
    </changeSet>
</databaseChangeLog>